<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>task</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= check_box_tag 'complete', task.id, task.complete,
                data: {
                  remote: true,
                  url: url_for(action: :toggle, id: task.id),
                  method: "POST"
                } %></td>
        <td><%= task.title %></td>
        <td><%= link_to 'S', task, class: "show" %></td>
        <td><%= link_to 'E', edit_task_path(task), class: "edit" %></td>
        <td><%= link_to 'D', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "delete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
