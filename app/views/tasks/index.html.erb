<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>task</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.complete %></td>
        <td><%= task.title %></td>
        <td><%= link_to 'S', task, class: "show" %></td>
        <td><%= link_to 'E', edit_task_path(task), class: "edit" %></td>
        <td><%= link_to 'D', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "delete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

